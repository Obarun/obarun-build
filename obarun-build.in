shopt -s extglob

##		Check is the functions file exits

if [[ -f /usr/lib/obarun/common_functions ]]; then
	source /usr/lib/obarun/common_functions
else
	echo "==>> Missing file : common_functions"
	exit	
fi

if [[ -f /usr/lib/obarun/build_functions ]]; then
	source /usr/lib/obarun/build_functions
else
	echo "==>> Missing file : build_functions"
	exit	
fi

##		Clean before exit

trap "clean_install" ERR QUIT KILL STOP INT TERM 

##		Must be run without root privilegies 

(( EUID == 0 )) || die " ${bred}You must be run this script with root privilegies" "clean_install"

##		Let's go

##		Update package or not

main_update(){
	echo_display " Do you want to update obarun-build package? [y|n]"

	reply_answer

	if (( ! $? )); then
		pac_update "obarun-build" "/var/lib/obarun/obarun-build" "$git_addr" || die " Impossible to update" "clean_install"
		source /usr/lib/obarun/build_functions
	else
		echo_retry " Some functionalities will cannot working properly without updating"
		echo_info " Press enter to continue"
		read enter
	fi
}

if [[ "$update" == "yes" ]]; then
	main_update
fi

if [[ -z "${1}" || -z "${2}" ]]; then
	usage
	exit 1
fi

opt="${2}"
named="${3}"

parse_create(){
	local pick
	pick="${1}"
	
	if [[ -z "${named}" ]]; then
		usage
		exit 1
	fi
	
	case "${pick}" in
		c|create)	
			create "${named}"
			;;
		*)
			usage
			exit 1
			;;
	esac
	
	unset pick
}

parse_build(){
	local pick
	pick="${1}"
	
	if [[ -z "${named}" ]]; then
		usage
		exit 1
	fi
	
	case "${pick}" in
		b|build)
			build "${named}"
			;;
		r|remake)
			remake "${named}"
			;;
		*)
			usage
			exit 1
			;;
	esac
	
	unset pick
}

parse_manage(){
	local pick
	pick="${1}"
	
	case "${pick}" in
		a|c|d|s|u)	
			echo_notvalid " a parsing ambiguity exist,"
			echo_notvalid " please insert the complete lxc- suffix command instead e.g start"
			exit 1	
			;;
		e)
			lxc_command_parse "execute" "${named}" "${manage_opt}"
			;;
		f)
			lxc_command_parse "freeze" "${named}" "${manage_opt}"
			;;
		i)
			lxc_command_parse "info" "${named}" "${manage_opt}"
			;;
		l)
			lxc_command_parse "ls" "${named}" "${manage_opt}"
			;;
		m)
			lxc_command_parse "monitor" "${named}" "${manage_opt}"
			;;
		t)
			lxc_command_parse "top" "${named}" "${manage_opt}"
			;;
		w)
			lxc_command_parse "wait" "${named}" "${manage_opt}"
			;;
		*)	
			if [[ "${pick}" == @(ls|autostart|checkconfig|top|usernsexec) ]]; then
				lxc_command_parse "${pick}" "${manage_opt}"
			else
				lxc_command_parse "${pick}" "${named}" "${manage_opt}"
			fi
			;;
	esac
	
	unset pick
}

case "${1}" in
	C|Create)
		parse_create "${opt}"
	    ;;
	B|Build)	
		parse_build "${opt}"
		;;
	M|Manage)
		manage_opt=${@}
		manage_opt=${manage_opt##*$opt' '}
		parse_manage "${opt}" 
		;;
	*)
	    usage
	    exit 1
	    ;;
esac

exit 0
